<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <Space
        android:layout_width="@dimen/_20sdp"
        android:layout_height="0dp"/>

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/PurchesImage"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/shoesnike"/>
    <Space
        android:layout_width="@dimen/_10sdp"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:padding="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/PurchesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_13ssp"
            android:text="Name: Rebook"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/PurchesPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_13ssp"
            android:text="Price: Rebook"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/PurchesSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_13ssp"
            android:text="Size: Rebook"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/PurchesColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_13ssp"
            android:text="Color: Rebook"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/PurchesTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_13ssp"
            android:text="Time: Rebook"/>
        <TextView
            android:layout_gravity="center"
            android:id="@+id/PurchesDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/_13ssp"
            android:text="Date: Rebook"/>

    </LinearLayout>




</LinearLayout>