<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainUi.Main">

    <TextView
        android:padding="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collections"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold" />

    <LinearLayout
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/_13ssp"
                android:id="@+id/ShoesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Shoes"
                android:textAllCaps="false"
                android:textColor="@color/TextColor"
                android:textStyle="bold" />
            <TextView
                android:visibility="gone"
                android:id="@+id/Indicator1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_line"/>

        </LinearLayout>

        <Space
            android:layout_width="@dimen/_20sdp"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/_13ssp"
                android:id="@+id/ClothTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Clothing"
                android:textAllCaps="false"
                android:textColor="@color/TextColor"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:id="@+id/Indicator2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color_line"/>

        </LinearLayout>

        <Space
            android:layout_width="@dimen/_20sdp"
            android:layout_height="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/FilterSearch"
            android:src="@drawable/filter" />

        <Space
            android:layout_width="@dimen/_15sdp"
            android:layout_height="0dp" />

        <LinearLayout
            android:id="@+id/searchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/color_searchshape"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_search_24"/>
            <Space
                android:layout_width="@dimen/_4sdp"
                android:layout_height="0dp"/>
            <TextView
                android:id="@+id/ed_Search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:text="Search..."/>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/ProductCointainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>